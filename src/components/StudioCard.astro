---
/**
 * StudioCard Component
 * A glowing, glassmorphic card for VibeSet studios
 * Features: accent-colored border glow, icon with pulse animation, hover lift
 */
export interface Props {
  id: string;
  name: string;
  tagline: string;
  description: string;
  accent: string;
  icon?: string;
  status?: 'live' | 'beta' | 'coming-soon';
  index?: number; // For stagger animation
}

const { id, name, tagline, description, accent, icon, status = 'live', index = 0 } = Astro.props;
const delay = index * 100;
---

<a 
  href={`/vibeset/studios/${id}`} 
  class="studio-card"
  style={`--accent: ${accent}; animation-delay: ${delay}ms;`}
  data-studio-id={id}
  transition:name={`studio-${id}`}
>
  <div class="card-glow" aria-hidden="true"></div>
  
  <div class="card-content">
    <div class="icon-wrapper">
      {icon ? (
        <img src={icon} alt="" class="studio-icon" loading="lazy" />
      ) : (
        <div class="icon-placeholder">✦</div>
      )}
    </div>
    
    <div class="text-content">
      <h3 class="studio-name">{name}</h3>
      <p class="studio-tagline">{tagline}</p>
    </div>
    
    {status !== 'live' && (
      <span class={`status-badge status-${status}`}>
        {status === 'beta' ? 'β' : '→'}
      </span>
    )}
    
    <div class="hover-cta">
      <span>Explore</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
</a>

<style lang="scss">
  .studio-card {
    position: relative;
    display: block;
    padding: 1.5rem;
    background: rgba(44, 44, 46, 0.6);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(168, 162, 158, 0.15);
    border-radius: 1.25rem;
    text-decoration: none;
    overflow: hidden;
    transition: 
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      border-color 0.3s ease;
    
    // Animation on load
    animation: card-enter 0.6s ease-out both;
    
    &:hover {
      transform: translateY(-6px) scale(1.02);
      border-color: var(--accent);
      
      .card-glow {
        opacity: 0.4;
      }
      
      .studio-icon {
        transform: scale(1.1);
        filter: drop-shadow(0 0 20px var(--accent));
      }
      
      .hover-cta {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    &:focus-visible {
      outline: 2px solid var(--accent);
      outline-offset: 3px;
    }
  }
  
  .card-glow {
    position: absolute;
    inset: -50%;
    background: radial-gradient(
      circle at 50% 100%,
      var(--accent) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 0;
  }
  
  .card-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .icon-wrapper {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
  }
  
  .studio-icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease, filter 0.3s ease;
  }
  
  .icon-placeholder {
    font-size: 2.5rem;
    color: var(--accent);
    text-shadow: 0 0 20px var(--accent);
  }
  
  .text-content {
    flex: 1;
  }
  
  .studio-name {
    font-family: var(--font-heading, 'Outfit', sans-serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--foreground-color, #FAF8F3);
    margin: 0 0 0.25rem;
    line-height: 1.2;
  }
  
  .studio-tagline {
    font-size: 0.9rem;
    color: var(--color-warm-gray, #A8A29E);
    margin: 0;
    line-height: 1.4;
  }
  
  .status-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.5rem;
    border-radius: 9999px;
    
    &.status-beta {
      background: rgba(155, 89, 182, 0.2);
      color: #9B59B6;
      border: 1px solid rgba(155, 89, 182, 0.4);
    }
    
    &.status-coming-soon {
      background: rgba(168, 162, 158, 0.2);
      color: var(--color-warm-gray);
      border: 1px solid rgba(168, 162, 158, 0.4);
    }
  }
  
  .hover-cta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading, 'Outfit', sans-serif);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    opacity: 0;
    transform: translateX(-10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    
    svg {
      transition: transform 0.2s ease;
    }
  }
  
  @keyframes card-enter {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  // Respect reduced motion
  @media (prefers-reduced-motion: reduce) {
    .studio-card {
      animation: none;
      transition: none;
      
      &:hover {
        transform: none;
      }
    }
    
    .studio-icon, .hover-cta, .card-glow {
      transition: none;
    }
  }
</style>
