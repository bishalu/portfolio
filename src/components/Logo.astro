---
import { Link } from 'accessible-astro-components'

/**
 * Logo Component - Bishal Upadhyaya
 */
---

<Link href="/" class="logo-link">
  <span class="logo-mark">BU</span>
  <span class="logo-text">Bishal</span>
</Link>

<style>
  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--foreground-color);
    text-decoration: none;
  }

  .logo-mark {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0.4rem;
    background: linear-gradient(135deg, var(--color-living-teal), var(--color-moss-green));
    width: 2rem;
    height: 2rem;
    color: var(--color-deep-moss);
    font-weight: 700;
    font-size: 0.875rem;
    font-family: var(--font-heading);
  }

  .logo-text {
    font-weight: 600;
    font-size: 1rem;
    font-family: var(--font-heading);
  }
</style>
