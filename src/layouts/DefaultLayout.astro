---
import '../styles/tailwind.css'
import '../assets/scss/index.scss'
import SiteMeta from '@components/SiteMeta.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import GlobalBackground from '@components/GlobalBackground.astro'
import { ClientRouter } from 'astro:transitions'

const {
  title = 'Bishal Upadhyaya',
  description = 'I build vibes within AI systems. AI Systems Architect focused on building intelligent products that understand context, match moods, and deliver real value.',
  url = Astro.site,
  image = 'social-preview-image.png',
  author = 'Bishal Upadhyaya',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SiteMeta title={title} description={description.substring(0, 100)} url={url} image={image} author={author} />

    <!-- Enable Astro View Transitions for all browsers -->
    <ClientRouter />
  </head>
  <body>
    <GlobalBackground />
    <Header />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    <style lang="scss" is:global>
      @use '../assets/scss/base/mixins' as *;

      // sticky footer on low content pages
      html,
      body {
        height: 100%;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        overflow-x: clip;
        overflow-y: auto;
        scroll-snap-type: y mandatory;

        main {
          flex: 1 0 auto;
        }

        footer {
          flex-shrink: 0;
          scroll-snap-align: end; // Footer snaps at the end
        }
      }

      // Reduced motion: disable smooth scrolling and snap
      @media (prefers-reduced-motion: reduce) {
        html,
        body {
          scroll-behavior: auto;
        }
        body {
          scroll-snap-type: none;
        }
      }

      pre {
        border: 2px solid var(--link-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }

      .card {
        a {
          @include text-decoration(transparent, var(--foreground-color), 4px, 2px);
        }
      }
    </style>
  </body>
</html>
